rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Students collection - users can only read/write their own data
    // Tutors can read student info when there's a booking
    match /students/{studentId} {
      allow read: if isAuthenticated() && (
        isOwner(studentId) ||
        // Allow tutors to read student info (for name display)
        exists(/databases/$(database)/documents/booking_requests/$(request.auth.uid)) ||
        true // Simplified - tutors can read student names
      );
      allow create: if isAuthenticated() && request.auth.uid == studentId;
      allow update, delete: if isOwner(studentId);
      
      // Chats subcollection - users can read/write their own chats
      match /chats/{chatId} {
        allow read, write: if isOwner(studentId);
        
        // Messages subcollection - users can read/write their own messages
        match /messages/{messageId} {
          allow read, write: if isOwner(studentId);
        }
      }
    }
    
    // Sessions collection - users can read their own sessions, tutors can read/create sessions
    match /sessions/{sessionId} {
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        resource.data.tutorId == request.auth.uid ||
        true // Simplified - authenticated users can read sessions
      );
      allow create: if isAuthenticated(); // Allow anyone authenticated to create sessions
      allow update: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        resource.data.tutorId == request.auth.uid
      );
    }
    
    // Tutors collection - tutors can read their own data
    match /tutors/{tutorId} {
      allow read: if isAuthenticated() && request.auth.uid == tutorId;
      allow create: if isAuthenticated() && request.auth.uid == tutorId;
      allow update: if isAuthenticated() && request.auth.uid == tutorId;
    }
    
    // Practice items collection - users can read/write their own practice items
    match /practice_items/{practiceId} {
      allow read: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.studentId == request.auth.uid;
    }
    
    // Learning paths collection - users can read/write their own learning paths
    match /learning_paths/{pathId} {
      allow read: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.studentId == request.auth.uid;
    }
    
    // Notifications collection - users can read their own notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      allow create: if false; // Only server-side functions can create notifications
      allow update: if isAuthenticated() && resource.data.studentId == request.auth.uid;
    }

    // Pre-generated questions for learning path optimization
    match /pre_generated_questions/{questionId} {
      allow read: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.studentId == request.auth.uid;
    }
    
    // Shared questions collection - visible to all authenticated users
    // Only Firebase Functions can create/update questions
    match /questions/{questionId} {
      allow read: if isAuthenticated(); // Anyone can read shared questions
      allow create, update: if false; // Only server-side functions can write
      allow delete: if false; // No one can delete questions
    }
    
    // User responses collection - users can read their own responses
    // Firebase Functions write responses after answer evaluation
    match /user_responses/{responseId} {
      allow read: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      allow create, update: if false; // Only server-side functions can write
      allow delete: if false; // Responses are permanent
    }
    
    // Checkpoint questions cache - for learning path optimization
    match /checkpoint_questions_cache/{cacheId} {
      allow read: if isAuthenticated();
      allow create, update: if false; // Only server-side functions can write
      allow delete: if false;
    }
    
    // Booking requests - students can create, view, and update their own requests
    // Tutors can read all pending bookings and update bookings they accept
    match /booking_requests/{bookingId} {
      // Allow reading own bookings OR any pending bookings (for tutors)
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        resource.data.status == 'pending'
      );
      // Allow reading list of pending bookings (query support for tutors)
      allow list: if isAuthenticated();
      // Students can create their own booking requests
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      // Students can update their own, tutors can accept pending bookings
      allow update: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        resource.data.status == 'pending'
      );
      allow delete: if false; // Only admin can delete bookings
    }
    
    // Conversations collection - students can read/write their own conversations
    match /conversations/{conversationId} {
      // Allow reading conversations where the user is the owner
      allow read: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      // Allow creating new conversations where the user sets themselves as owner
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      // Allow updating and deleting their own conversations
      allow update, delete: if isAuthenticated() && resource.data.studentId == request.auth.uid;
    }
  }
}

